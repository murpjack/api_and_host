{
  "compilerOptions": {
    "module": "ESNext",
    "removeComments": true,
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "esModuleInterop":true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./server",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/_test_/**/*",
    "**/*.test.ts",
    "types.ts"
  ]
}
